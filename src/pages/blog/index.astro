---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
  });
}
---

<BaseLayout title="Writing" description="All posts by Peter Kincaid">
  <h1 class="text-2xl md:text-3xl mb-10" style="font-weight: normal;">
    Writing
  </h1>

  {posts.length === 0 ? (
    <p style="color: var(--color-brown-light);">Nothing here yet.</p>
  ) : (
    <ul class="space-y-10">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.id.replace(/\.md$/, '')}`} class="block group">
            <span class="text-sm" style="color: var(--color-brown-lighter);">
              {formatDate(post.data.date)}
            </span>
            <h2 class="text-xl mt-1 mb-2 group-hover:opacity-70 transition-opacity" style="font-weight: normal; color: var(--color-brown);">
              {post.data.title}
            </h2>
            <p style="color: var(--color-brown-light);">
              {post.data.description}
            </p>
          </a>
        </li>
      ))}
    </ul>
  )}
</BaseLayout>
