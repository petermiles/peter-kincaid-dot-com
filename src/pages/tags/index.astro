---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const tags = [...new Set(posts.flatMap((post) => post.data.tags))].sort();

function getPostCountForTag(tag: string) {
  return posts.filter((post) => post.data.tags.includes(tag)).length;
}
---

<BaseLayout title="Topics" description="Browse posts by topic">
  <h1 class="text-2xl md:text-3xl mb-8" style="font-weight: normal;">
    Topics
  </h1>

  {tags.length === 0 ? (
    <p style="color: var(--color-brown-light);">Nothing here yet.</p>
  ) : (
    <ul class="space-y-3">
      {tags.map((tag) => (
        <li>
          <a href={`/tags/${tag}`} class="inline-flex items-center gap-2">
            <span>{tag}</span>
            <span class="text-sm" style="color: var(--color-brown-lighter);">
              ({getPostCountForTag(tag)})
            </span>
          </a>
        </li>
      ))}
    </ul>
  )}
</BaseLayout>
