---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
  });
}
---

<BaseLayout title="Peter Kincaid">
  <section class="mb-16">
    <h1 class="text-2xl md:text-3xl mb-4" style="font-weight: normal;">
      Hey, I'm Peter.
    </h1>
    <p class="text-lg leading-relaxed" style="color: var(--color-brown-light);">
      I write about life, work, and figuring things out along the way.
    </p>
  </section>

  <section>
    {posts.length === 0 ? (
      <p style="color: var(--color-brown-light);">Nothing here yet.</p>
    ) : (
      <ul class="space-y-8">
        {posts.map((post) => (
          <li>
            <a href={`/blog/${post.id.replace(/\.md$/, '')}`} class="block group">
              <span class="text-sm" style="color: var(--color-brown-lighter);">
                {formatDate(post.data.date)}
              </span>
              <h2 class="text-xl mt-1 group-hover:opacity-70 transition-opacity" style="font-weight: normal; color: var(--color-brown);">
                {post.data.title}
              </h2>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>
