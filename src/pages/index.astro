---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<BaseLayout title="Home">
  <section class="mb-12">
    <h1 class="text-3xl font-bold mb-4">Hey, I'm Peter</h1>
    <p class="text-lg text-slate-600 leading-relaxed">
      Welcome to my corner of the internet. I write about things that interest me.
    </p>
  </section>

  <section>
    <h2 class="text-xl font-semibold mb-6">Recent Posts</h2>

    {posts.length === 0 ? (
      <p class="text-slate-500">No posts yet. Check back soon!</p>
    ) : (
      <ul class="space-y-6">
        {posts.map((post) => (
          <li>
            <a href={`/blog/${post.id.replace(/\.md$/, '')}`} class="group block">
              <article>
                <h3 class="text-lg font-medium group-hover:text-blue-600 transition-colors">
                  {post.data.title}
                </h3>
                <p class="text-slate-500 text-sm mt-1">{post.data.description}</p>
                <time class="text-slate-400 text-sm mt-2 block">
                  {formatDate(post.data.date)}
                </time>
              </article>
            </a>
          </li>
        ))}
      </ul>
    )}

    {posts.length > 0 && (
      <a href="/blog" class="inline-block mt-8 text-blue-600 hover:text-blue-800 text-sm font-medium">
        View all posts â†’
      </a>
    )}
  </section>
</BaseLayout>
