---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Peter Kincaid's personal blog" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="pt-12 pb-8 md:pt-16 md:pb-12">
      <nav class="max-w-xl mx-auto px-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-lg" style="color: var(--color-brown);">
            Peter Kincaid
          </a>
          <a href="/blog" style="color: var(--color-brown-light);">Writing</a>
        </div>
      </nav>
    </header>

    <main class="flex-1 max-w-xl mx-auto px-6 w-full pb-16 md:pb-24">
      <slot />
    </main>

    <footer class="py-12" style="color: var(--color-brown-lighter);">
      <div class="max-w-xl mx-auto px-6 text-sm flex justify-between items-center">
        <span>&copy; {new Date().getFullYear()} Peter Kincaid</span>
        <a href="mailto:hello@peterkincaid.com">hello@peterkincaid.com</a>
      </div>
    </footer>
  </body>
</html>
